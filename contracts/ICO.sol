contract ICO is Ownable, ReentrancyGuard {
    using SafeMath for uint256;

    uint256 public tokenPrice = 0.015 ether;
    uint256 public deployDate;
    IERC20 token;

    constructor(address _token) Ownable(msg.sender) {
        token = IERC20(_token);
        deployDate = block.timestamp;
    }

    function setToken(address _token) public onlyOwner {
        token = IERC20(_token);
    }

    function setTokenPrice(uint256 _price) public onlyOwner {
        tokenPrice = _price;
    }
    
    /** 
      * @dev function to buy token with ether
    */

    function buy() public payable nonReentrant returns (bool sucess) {
      require(msg.value > tokenPrice, "Warning: not enough to buy");
      require(block.timestamp - deployDate < 2 weeks, "Warning: sale expired");
      
      uint256 amount = msg.value.div(tokenPrice).mul(1 ether);
      require(amount >= 100 ether && amount <= 500 ether, "Warning: buy amount of token limited");

      token.transfer(msg.sender, amount);
      return true;
    }

    /** 
      * @param amount (type uint256) amount of ether
      * @dev function use to withdraw ether from contract
    */
    function withdraw(uint256 amount) public onlyOwner returns (bool success) {
      require(amount <= address(this).balance, "ICO: function withdraw invalid input");
      payable(msg.sender).transfer(amount);
      return true;
    }

    function withdrawERC20(uint256 amount) public onlyOwner returns (bool success) {
        require(amount <= token.balanceOf(address(this)), "Warning: function withdraw invalid input");
        token.transfer(msg.sender, amount);
        return true;
    }

    receive() external payable { }
}
